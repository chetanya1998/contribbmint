model User {
  id              String   @id @default(cuid())
  name            String?
  email           String?  @unique
  githubUsername  String?  @unique
  avatarUrl       String?
  role            String     @default("CONTRIBUTOR")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  projectMemberships ProjectMember[]
  sponsorships    Sponsorship[] @relation("SponsorshipUser")
  sessions        Session[]
  accounts        Account[]
  walletAddress   String? // Web3 Address
  votes           Vote[]
}

model Project {
  id              String          @id @default(cuid())
  status          String   @default("PENDING")
  githubOwner     String
  githubRepo      String
  githubUrl       String
  name            String
  description     String?
  primaryLanguage String?
  topics          String // CSV
  tags            String // CSV
  stars           Int      @default(0)
  forks           Int      @default(0)
  openIssuesCount Int      @default(0)
  lastPushedAt    DateTime?
  lastSyncedAt    DateTime?
  githubId        String?
  
  // GSOC Integration Fields
  gsocYear        Int?
  officialWebsite String?
  chatUrl         String?
  documentationUrl String?
  contributionGuide String? @db.Text
  source          String? @default("MANUAL") // "GSOC" or "MANUAL"
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  members         ProjectMember[]
  events          ContributionEvent[]
  reputations     ProjectReputation[]
  sponsorships    Sponsorship[]
}

model ProjectMember {
  id            String      @id @default(cuid())
  projectId     String
  userId        String
  roleInProject String
  createdAt     DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id])
  user    User    @relation(fields: [userId], references: [id])
}

model ContributionEvent {
  id                  String                 @id @default(cuid())
  projectId           String
  eventType           String
  actorGithubUsername String
  targetId            String
  title               String
  url                 String
  occurredAt          DateTime
  metadata            String?
  createdAt           DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id])
  
  // Web3 / Minting Fields
  mintStatus      String   @default("PENDING_VOTE") // PENDING_VOTE, READY_TO_MINT, MINTED
  tokenId         String?
  transactionHash String?
  votes           Vote[]
}

model Vote {
  id                 String            @id @default(cuid())
  contributionEventId String
  userId             String
  score              Int               @default(0) // 1-5 rating
  createdAt          DateTime          @default(now())

  contributionEvent  ContributionEvent @relation(fields: [contributionEventId], references: [id])
  user               User              @relation(fields: [userId], references: [id])

  @@unique([contributionEventId, userId]) // One vote per user per contribution
}

model ProjectReputation {
  id             String   @id @default(cuid())
  projectId      String
  githubUsername String
  pointsTotal    Int      @default(0)
  lastComputedAt DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id])
}

model Sponsorship {
  id           String   @id @default(cuid())
  projectId    String
  sponsorUserId String
  createdAt    DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id])
  sponsor User    @relation("SponsorshipUser", fields: [sponsorUserId], references: [id])
}

/// NextAuth models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
