generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  CONTRIBUTOR
  MAINTAINER
  SPONSOR
  ADMIN
}

enum ProjectStatus {
  PENDING
  APPROVED
  REJECTED
}

enum MemberRole {
  OWNER
  MAINTAINER
  CONTRIBUTOR
}

enum ContributionEventType {
  PR_MERGED
  ISSUE_CLOSED
  REVIEW_APPROVED
}

model User {
  id              String   @id @default(cuid())
  name            String?
  email           String?  @unique
  githubUsername  String?  @unique
  avatarUrl       String?
  role            Role     @default(CONTRIBUTOR)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  projectMemberships ProjectMember[]
  sponsorships    Sponsorship[] @relation("SponsorshipUser")
  sessions        Session[]
  accounts        Account[]
}

model Project {
  id              String          @id @default(cuid())
  status          ProjectStatus   @default(PENDING)
  githubOwner     String
  githubRepo      String
  githubUrl       String
  name            String
  description     String?
  primaryLanguage String?
  topics          String[]
  tags            String[]
  stars           Int      @default(0)
  forks           Int      @default(0)
  openIssuesCount Int      @default(0)
  lastPushedAt    DateTime?
  lastSyncedAt    DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  members         ProjectMember[]
  events          ContributionEvent[]
  reputations     ProjectReputation[]
  sponsorships    Sponsorship[]
}

model ProjectMember {
  id            String      @id @default(cuid())
  projectId     String
  userId        String
  roleInProject MemberRole
  createdAt     DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id])
  user    User    @relation(fields: [userId], references: [id])
}

model ContributionEvent {
  id                  String                 @id @default(cuid())
  projectId           String
  eventType           ContributionEventType
  actorGithubUsername String
  targetId            String
  title               String
  url                 String
  occurredAt          DateTime
  metadata            Json?
  createdAt           DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id])
}

model ProjectReputation {
  id             String   @id @default(cuid())
  projectId      String
  githubUsername String
  pointsTotal    Int      @default(0)
  lastComputedAt DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id])
}

model Sponsorship {
  id           String   @id @default(cuid())
  projectId    String
  sponsorUserId String
  createdAt    DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id])
  sponsor User    @relation("SponsorshipUser", fields: [sponsorUserId], references: [id])
}

/// NextAuth models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
